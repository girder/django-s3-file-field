{
  "name": "django-s3-file-field-widget",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "lint:eslint": "eslint ./src/**.ts",
    "lint:tsc": "tsc --noEmit",
    "lint": "npm-run-all lint:*",
    "watch": "parcel watch ./src/widget.ts --dist-dir ../s3_file_field/static/s3_file_field/",
    "build:clean": "rimraf ../s3_file_field/static/s3_file_field",
    "build:compile": "parcel build ./src/widget.ts --dist-dir ../s3_file_field/static/s3_file_field/ --no-source-maps --no-cache",
    "build": "npm-run-all build:clean build:compile"
  },
  "dependencies": {
    "django-s3-file-field": "file:../javascript-client",
    "svelte": "^4.2.0",
    "svelte-preprocess": "^5.0.4"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.10.0",
    "@tsconfig/recommended": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "buffer": "^6.0.3",
    "eslint": "^8",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.10.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "@tsconfig/svelte": "^5.0.2",
    "parcel-transformer-svelte3-plus": "^0.2.10",
    "process": "^0.11.10",
    "svelte-check": "^3.5.0"
  },
  "alias": {
    "buffer": false
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version"
  ],
  "@parcel/resolver-default": {
    "packageExports": true
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended-type-checked",
      "airbnb-base",
      "airbnb-typescript/base"
    ],
    "rules": {
      "no-restricted-syntax": 0
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.js",
          "**/*.svelte"
        ]
      }
    ]
  }
}
